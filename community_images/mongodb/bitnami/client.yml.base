apiVersion: v1
kind: Pod
metadata:
  labels:
    run: mongodb-release-client
  name: mongodb-release-client
spec:
  containers:
  - command:
    - /bin/bash
    - -c
    - sleep infinity
    env:
    - name: MONGODB_ROOT_PASSWORD
      value: ${MONGODB_ROOT_PASSWORD}
    name: mongodb-release-client
    image: ${IMAGE_REPOSITORY}:${TAG}
    securityContext:
      capabilities:
        add: ["SYS_PTRACE"]

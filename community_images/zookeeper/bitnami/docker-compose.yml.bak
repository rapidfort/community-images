version: '2'

services:
  zookeeper1:
    image: ${ZOOKEEPER_IMAGE_REPOSITORY}:${ZOOKEEPER_IMAGE_TAG}
    user: root
    cap_add:
      - SYS_PTRACE
    ports:
      - '2181'
      - '2888'
      - '3888'
    volumes:
      - $ZOOKEEPER_HOME:/bitnami/zookeeper
    environment:
      - ZOO_SERVER_ID=1
      - ZOO_SERVERS=0.0.0.0:2888:3888,zookeeper2:2888:3888,zookeeper3:2888:3888
  zookeeper2:
    image: ${ZOOKEEPER_IMAGE_REPOSITORY}:${ZOOKEEPER_IMAGE_TAG}
    user: root
    cap_add:
      - SYS_PTRACE
    ports:
      - '2181'
      - '2888'
      - '3888'
    volumes:
      - $ZOOKEEPER_HOME:/bitnami/zookeeper
    environment:
      - ZOO_SERVER_ID=2
      - ZOO_SERVERS=zookeeper1:2888:3888,0.0.0.0:2888:3888,zookeeper3:2888:3888
  zookeeper3:
    image: ${ZOOKEEPER_IMAGE_REPOSITORY}:${ZOOKEEPER_IMAGE_TAG}
    user: root
    cap_add:
      - SYS_PTRACE
    ports:
      - '2181'
      - '2888'
      - '3888'
    volumes:
      - $ZOOKEEPER_HOME:/bitnami/zookeeper
    environment:
      - ZOO_SERVER_ID=3
      - ZOO_SERVERS=zookeeper1:2888:3888,zookeeper2:2888:3888,0.0.0.0:2888:3888